{
  "openapi": "3.1.1",
  "info": {
    "title": "Waste Organisations REST API",
    "description": "Save and retrieve organisations alongside their yearly registrations",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost/"
    }
  ],
  "paths": {
    "/organisations": {
      "get": {
        "tags": [
          "Organisations"
        ],
        "summary": "Search organisations",
        "description": "Returns all organisations filtered by multiple criteria",
        "operationId": "SearchOrganisations",
        "parameters": [
          {
            "name": "registrations",
            "in": "query",
            "description": "Comma separated list of registration types",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/RegistrationType"
              }
            }
          },
          {
            "name": "registrationYears",
            "in": "query",
            "description": "Comma separated list of years",
            "schema": {
              "maximum": 2050,
              "minimum": 2023,
              "type": "array",
              "items": {
                "pattern": "^-?(?:0|[1-9]\\d*)$",
                "type": [
                  "integer",
                  "string"
                ],
                "format": "int32"
              }
            }
          },
          {
            "name": "statuses",
            "in": "query",
            "description": "Comma separated list of registration statuses",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/RegistrationStatus"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrganisationSearch"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/organisations/{id}": {
      "get": {
        "tags": [
          "Organisations"
        ],
        "summary": "Get an organisation by ID",
        "description": "Returns the organisation details for a specific organisation ID",
        "operationId": "GetOrganisation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organisation"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Organisations"
        ],
        "summary": "Create or update organisation",
        "description": "Create or update an organisation, including creating or updating the given registration details",
        "operationId": "CreateOrUpdateOrganisation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrganisationRegistration"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organisation"
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organisation"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/organisations/{id}/registrations/{type}-{registrationYear}": {
      "put": {
        "tags": [
          "Registrations"
        ],
        "summary": "Create or update a registration",
        "operationId": "CreateOrUpdateRegistration",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "type",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/RegistrationType"
            }
          },
          {
            "name": "registrationYear",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistrationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Registration"
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Registration"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Registrations"
        ],
        "summary": "Delete an existing registration",
        "operationId": "DeleteRegistration",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "type",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/RegistrationType"
            }
          },
          {
            "name": "registrationYear",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Address": {
        "type": "object",
        "properties": {
          "addressLine1": {
            "type": [
              "null",
              "string"
            ]
          },
          "addressLine2": {
            "type": [
              "null",
              "string"
            ]
          },
          "town": {
            "type": [
              "null",
              "string"
            ]
          },
          "county": {
            "type": [
              "null",
              "string"
            ]
          },
          "postcode": {
            "type": [
              "null",
              "string"
            ]
          },
          "country": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "BusinessCountry": {
        "enum": [
          "GB-ENG",
          "GB-NIR",
          "GB-SCT",
          "GB-WLS",
          null
        ]
      },
      "Organisation": {
        "required": [
          "id",
          "name",
          "address"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "tradingName": {
            "type": [
              "null",
              "string"
            ]
          },
          "businessCountry": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/BusinessCountry"
              }
            ]
          },
          "companiesHouseNumber": {
            "type": [
              "null",
              "string"
            ]
          },
          "address": {
            "$ref": "#/components/schemas/Address"
          },
          "registrations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Registration"
            }
          }
        }
      },
      "OrganisationRegistration": {
        "required": [
          "name",
          "address",
          "registration"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tradingName": {
            "type": [
              "null",
              "string"
            ]
          },
          "businessCountry": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/BusinessCountry"
              }
            ]
          },
          "companiesHouseNumber": {
            "type": [
              "null",
              "string"
            ]
          },
          "address": {
            "$ref": "#/components/schemas/Address"
          },
          "registration": {
            "$ref": "#/components/schemas/Registration"
          }
        }
      },
      "OrganisationSearch": {
        "type": "object",
        "properties": {
          "organisations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Organisation"
            }
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": [
              "null",
              "string"
            ]
          },
          "title": {
            "type": [
              "null",
              "string"
            ]
          },
          "status": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "null",
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "detail": {
            "type": [
              "null",
              "string"
            ]
          },
          "instance": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "Registration": {
        "required": [
          "status",
          "type"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/RegistrationStatus"
          },
          "type": {
            "$ref": "#/components/schemas/RegistrationType"
          },
          "registrationYear": {
            "maximum": 2050,
            "minimum": 2023,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          }
        }
      },
      "RegistrationRequest": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "$ref": "#/components/schemas/RegistrationStatus"
          }
        }
      },
      "RegistrationStatus": {
        "enum": [
          "REGISTERED",
          "CANCELLED"
        ]
      },
      "RegistrationType": {
        "enum": [
          "SMALL_PRODUCER",
          "LARGE_PRODUCER",
          "COMPLIANCE_SCHEME",
          "REPROCESSOR",
          "EXPORTER"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "Organisations"
    },
    {
      "name": "Registrations"
    }
  ]
}